<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.mvpframe.ui.MainActivity">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="Hello World!"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="Hello World!1"
            android:textColor="#000000" />

        <com.mvpframe.view.textview.ButtonTextView
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_distance_20"
            android:text="网络加载失败"
            android:textSize="@dimen/text_16"
            app:cornerRadius="@dimen/radius_5"
            app:strokeColor="@color/colorPrimary" />

        <com.mvpframe.view.imageview.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            app:border_inside_color="#50c0e9"
            app:border_thickness="3dp" />

    </LinearLayout>

</layout>
