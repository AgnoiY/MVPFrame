<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:pv="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.mvpframe.ui.MainActivity">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="Hello World!"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="Hello World!1"
            android:textColor="#000000" />

        <Button
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按钮" />

        <com.mvpframe.view.imageview.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            pv:border_inside_color="#50c0e9"
            pv:border_thickness="3dp" />

        <include
            android:id="@+id/in"
            layout="@layout/layout_recycler_refresh"/>

        <include
            android:id="@+id/in1"
            layout="@layout/layout_recycler_refresh"/>

    </LinearLayout>

</layout>
