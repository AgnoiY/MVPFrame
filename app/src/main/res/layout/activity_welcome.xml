<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:pv="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.WelcomeActivity">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="欢迎" />

        <com.mvpframe.view.textview.ButtonTextView
            android:id="@+id/btv_down_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_48"
            android:layout_marginRight="@dimen/right_distance_16"
            android:paddingLeft="@dimen/left_distance_20"
            android:paddingTop="@dimen/top_distance_6"
            android:paddingRight="@dimen/left_distance_20"
            android:paddingBottom="@dimen/bottom_distance_6"
            pv:cornerRadius="@dimen/radius_5"
            pv:layout_constraintRight_toRightOf="parent"
            pv:layout_constraintTop_toTopOf="parent"
            pv:strokeColor="@color/translucent_black"
            tools:text="3s" />

    </android.support.constraint.ConstraintLayout>
</layout>